<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="Resumo da Hospedagem"
             BackgroundColor="#F0F8FF">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Label 
            Text="Reserva Concluída!"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            TextColor="#007A99" />

        <Frame CornerRadius="10" Padding="20" BorderColor="#DDDDDD" HasShadow="True" BackgroundColor="#F5F5F5">
            <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
                  ColumnDefinitions="*, Auto"
                  RowSpacing="15">

                <Label Grid.Row="0" Grid.Column="0" Text="Suíte:" FontAttributes="Bold" TextColor="Black" />
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding QuartoSelecionado.Descricao}" TextColor="Black" />

                <Label Grid.Row="1" Grid.Column="0" Text="Adultos:" FontAttributes="Bold" TextColor="Black" />
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding QntAdultos}" TextColor="Black" />

                <Label Grid.Row="2" Grid.Column="0" Text="Crianças:" FontAttributes="Bold" TextColor="Black" />
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding QntCriancas}" TextColor="Black" />

                <Label Grid.Row="3" Grid.Column="0" Text="Período (dias):" FontAttributes="Bold" TextColor="Black" />
                <Label Grid.Row="3" Grid.Column="1" Text="{Binding Estadia}" TextColor="Black" />

                <BoxView Grid.Row="4" Grid.ColumnSpan="2" HeightRequest="1" Color="#DDDDDD" Margin="0,10" />

                <Label Grid.Row="5" Grid.Column="0" Text="Valor Total:" FontAttributes="Bold" FontSize="18" TextColor="Black" />
                <Label Grid.Row="5" Grid.Column="1" Text="{Binding ValorTotal, StringFormat='R$ {0:F2}'}" FontSize="18" FontAttributes="Bold" TextColor="#006400" />
            </Grid>
        </Frame>

        <Button 
            x:Name="btn_nova_reserva"
            Text="Nova Reserva"
            Clicked="btn_nova_reserva_Clicked"
            BackgroundColor="#007A99"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="10"
            Margin="0,20,0,0" />

    </VerticalStackLayout>
</ContentPage>